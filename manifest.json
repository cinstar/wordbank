{
  "name": "Word Bank",
  "version": "0.1",
  "manifest_version": 3,
  "description": "Stores all your fanciest words",
  "background": {
    "service_worker": "service-worker.js"
  },
  "icons": {
    "128": "wordbank_logo7.png"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_icon": "wordbank_logo7.png"
  },
  "permissions": ["sidePanel", "contextMenus", "tabs", "storage"],
  "content_scripts": [{
    "css": ["styles.css"],
    "js": ["content.js", "sidepanel.js", "highlight.js"],
    "matches": ["<all_urls>"]
  }]
}
